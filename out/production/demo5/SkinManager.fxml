<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="SkinManagerController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #28313B, #485461);">

    <!-- Tiêu đề -->
    <Label text="SKIN MANAGER"
           layoutX="250" layoutY="30"
           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" />

    <!-- Phần Brick Skin -->
    <VBox layoutX="100" layoutY="120" spacing="15" alignment="CENTER">
        <Label text="Brick Skin" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="brickPrevButton" text="◀" style="-fx-font-size: 20px; -fx-min-width: 40px;"/>
            <ImageView fx:id="brickPreview" fitWidth="120" fitHeight="60" preserveRatio="true"/>
            <Button fx:id="brickNextButton" text="▶" style="-fx-font-size: 20px; -fx-min-width: 40px;"/>
        </HBox>
    </VBox>

    <!-- Phần Ball Skin -->
    <VBox layoutX="100" layoutY="320" spacing="15" alignment="CENTER">
        <Label text="Ball Skin" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="ballPrevButton" text="◀" style="-fx-font-size: 20px; -fx-min-width: 40px;"/>
            <ImageView fx:id="ballPreview" fitWidth="80" fitHeight="80" preserveRatio="true"/>
            <Button fx:id="ballNextButton" text="▶" style="-fx-font-size: 20px; -fx-min-width: 40px;"/>
        </HBox>
    </VBox>

    <!-- Nút Back -->
    <Button fx:id="backButton"
            text="BACK"
            layoutX="360" layoutY="520"
            onAction="#onBack"
            style="-fx-font-size: 18px; -fx-padding: 8 20 8 20;
               -fx-background-color: #4C5866; -fx-text-fill: white;"/>

</AnchorPane>
